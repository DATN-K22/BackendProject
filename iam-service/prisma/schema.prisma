generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  engineType      = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["iam_service"]
}

model Users {
  id            String         @id @default(uuid(7)) @db.Uuid
  email         String         @unique
  password_hash String
  first_name    String?
  last_name     String?
  avt_url       String?
  role          UserRole       @default(user)
  created_at    DateTime       @default(now()) @db.Timestamptz(6)
  enroll_course BigInt[]       @default([])
  events        Event[]
  refreshTokens RefreshToken[]

  @@schema("iam_service")
}

model RefreshToken {
  id          BigInt   @id @default(autoincrement())
  user_id     String   @db.Uuid
  jti         String   @unique
  token_hash  String
  expires_at  DateTime
  revoked     Boolean  @default(false)
  replaced_by String?
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  user        Users    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@schema("iam_service")
}

model Event {
  id                BigInt               @id @default(autoincrement())
  user_id           String               @db.Uuid
  uid               String               @unique @default(uuid()) @db.VarChar(255)
  title             String               @db.VarChar(255)
  description       String?
  location          String?              @db.VarChar(255)
  status            EventStatus          @default(CONFIRMED)
  time_start        DateTime             @db.Timestamptz(6)
  time_end          DateTime             @db.Timestamptz(6)
  timezone          String?              @default("UTC") @db.VarChar(50)
  rrule_string      String?
  sequence          Int                  @default(0)
  created_at        DateTime             @default(now()) @db.Timestamptz(6)
  updated_at        DateTime             @updatedAt @db.Timestamptz(6)
  recurrence_id     DateTime?            @db.Timestamptz(6)
  original_event_id BigInt?
  original_event    Event?               @relation("RecurringExceptions", fields: [original_event_id], references: [id])
  exceptions        Event[]              @relation("RecurringExceptions")
  user              Users                @relation(fields: [user_id], references: [id], onDelete: Cascade)
  exception_dates   EventExceptionDate[]

  @@schema("iam_service")
}

model EventExceptionDate {
  id             BigInt   @id @default(autoincrement())
  event_id       BigInt
  exception_date DateTime @db.Date
  reason         String?  @db.VarChar(255)
  event          Event    @relation(fields: [event_id], references: [id], onDelete: Cascade)

  @@schema("iam_service")
}

enum UserRole {
  user
  admin

  @@schema("iam_service")
}

enum EventStatus {
  CONFIRMED
  TENTATIVE
  CANCELLED

  @@schema("iam_service")
}
